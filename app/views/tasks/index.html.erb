<div class="container" padding="m-3">

  <h1>My Tasks</h1>


  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
        <%= link_to "[X]", task_path(task), method: :delete %>
      </li>
    <% end %>
  </ul>


  <div>
    <%= link_to "Add a new task", tasks_new_path %>
  </div>

</div>
